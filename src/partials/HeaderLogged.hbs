      <a href="/cart/">
        <div class="flex gap-1 items-center">
          <div class="relative">
            <img
              src="/src/assets/cartWhiteIcon.svg"
              alt="cart icon"
            />
            <div
              class="absolute text-[8px] inline-flex items-center border border-white rounded-full justify-center px-0.5 h-2.5 text-emerald-500 left-3.5 -top-0.5 text-center bg-green-100"
            >
              6
            </div>
          </div>
          <div class="flex gap-2">
