      <a href="/">
        <img
          src="/src/assets/Logo.svg"
          alt="service tir logo"
          class="max-w-none"
        />
      </a>
      <button id="menuBtn">
        <img
          src="/src/assets/menuIcon.svg"
          alt="menuIcon"
          class="max-w-none"
        />
      </button>
      <button
        id="closeHeaderButton"
        class="hidden"
      >
        <img
          src="/src/assets/xMarkWhiteIcon.svg"
          alt="x-mark icon"
        />
      </button>
    </div>
    <div
