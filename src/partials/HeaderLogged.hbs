      <div class="flex gap-2 items-center">
        <img
          src="/src/assets/userWhiteIcon.svg"
          alt="user icon"
        />
        <div class="text-xs font-medium">
          <p>Олександр</p>
          <a href="/">
            <p class="text-white">Вийти</p>
          </a>
